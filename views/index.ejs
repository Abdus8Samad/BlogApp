<%- include ('partials/header') %>
<div class="ui container">
    <% blogs.forEach(blog => { %>
    <div class="ui items">
        <div class="item">
          <div class="image">
              <img src="<%= blog.data().image %>">
          </div>
          <div class="content">
            <h1 class="header"><%= blog.data().title %></h1>
            <div class="meta">
              <span>Description</span>
            </div>
            <div class="description">
                <h4><%- blog.data().body.substring(0,200) %>....</h4>
            </div>
            <div class="extra">
              <p><Strong>Posted On <%= blog.data().created %> at <%= blog.data().time %></Strong></p>
              <a href="/blogs/<%= blog.id %>" class="ui primary inverted button readmore">Read More <i class="angle double right icon"></i></i></a>
            </div>
          </div>
        </div>
    </div>
        <% }); %>
    
<%- include ('partials/footer') %>